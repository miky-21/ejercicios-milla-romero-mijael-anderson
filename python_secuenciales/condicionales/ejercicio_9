precio_unitario=16 
codigo==104
precio_unitario=27  
importe_de_la_compra=precio_unitario*unidades_adquiridas
unidades_adquiridas>=1 , unidades_adquiridas<=10
import_del_descuento=importe_de_la_compra*0.05
unidades_adquiridas>=11 , unidades_adquiridas<=20
